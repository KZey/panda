Panda::Config.use(:production) do |p|
  # ================================================
  # API integration options
  # ================================================
  # The api_key allows your application to authenticate with Panda. You should 
  # generate a random string to use as the key.
  
  p[:access_key]               = ""
  p[:secret_key]               = ""
  
  # ================================================
  # AWS access identifiers
  # ================================================
  
  # For SimpleDB database and/or S3 storage
  p[:access_key_id]         = "AWS_ACCESS_KEY"
  p[:secret_access_key]     = "AWS_SECRET_ACCESS_KEY"
  
  # ================================================
  # Database
  # ================================================
  
  p[:database] = :simpledb
  
  # Set SimpleDB domain prefix. Use this if you have multiple Panda accounts using one SimpeDB account.
  # p[:sdb_domain_prefix] = "panda2_"

  # ================================================
  # Storage location for uploaded and encoded videos
  # ================================================
  
  # Temporary location for videos being uploaded or encoded
  # p[:private_tmp_path]      = "/tmp"
  
  # For S3 storage:
  p[:videos_store]          = :s3
  p[:videos_domain]         = "s3.amazonaws.com/S3_BUCKET"
  p[:s3_videos_bucket]      = "S3_BUCKET"
  
  # For local filesystem storage:
  # p[:videos_store]          = :filesystem
  # p[:videos_domain]         = "localhost:4000/store"
  # p[:public_videos_dir]     = File.dirname(__FILE__) + "/../public/store"
  
  # ================================================
  # Advanced options
  # ================================================
  
  # Each encoding job has its own log file. If there's an error this file is uploaded to the configured store for debugging purposes.
  # p[:encoding_log_dir]     = File.dirname(__FILE__) + "/../log"
end

